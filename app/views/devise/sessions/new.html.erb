<!--ログイン-->
<%= render :partial => "/list" %>
<div style="text-align:center;">
<h4 style="color:white" class="pt-5 pb-5">ログイン</h4>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="container pt-4 px-3 pb-4 mx-auto" style="background-color: #808080;" >
    <div class="row bgblue">
      
      <div class="col-4">
      <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%#= f.label :profile_image %><br>
          <%= image_tag 'noimage.png', size: "120x120" %>
          <%#= f.attachment_field :profile_image, size: "100x120", fallback: "noimage.png" %>
        </div>
      </div>
      
      <div class="col-6">
        <table>
          <tr>
            <div class="field" style="color:white">
              <td style="color:white"><%= f.label :ニックネーム %></td>
              <td class="pl-5"><%= f.email_field :name, autofocus: true, autocomplete: "name" %></td>
            </div>
          </tr>
          <tr>
            <div class="field" style="color:white">
              <td style="color:white"><%= f.label :メールアドレス %></td>
              <td class="pl-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </div>
          </tr>
          <tr>
            <div class="field" style="color:white">
              <td style="color:white"><%= f.label :パスワード %></td>
              <td class="pl-5"><%= f.password_field :password, autocomplete: "current-password" %></td>
            </div>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="actions pt-4 px-3">
    <%=link_to 'topに戻る', root_path, class:'btn btn-danger'%>
    <%= f.submit "ログイン", class:'btn btn-info' %>
  </div>
  <div style="color:#d3d3d3;" class="pt-5">
    <p><%= link_to"新規登録はこちらから", new_user_registration_path %></p>
  </div>
<% end %>
  
  


</div>


      


  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  

